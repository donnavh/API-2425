{% layout "server/layouts/base.liquid" %}

{% block content %}
  <h1>{{ title }}</h1>

  {% if items.size > 0 %}
    <ul class="grid">
      {% for track in items %}
        <li class="card">
          <img 
            src="{{ track.album.images[0].url }}" 
            style="view-transition-name: song_{{ track.id }};" 
            alt="Album image" 
            class="card__image" 
          />



          <div class="track-info">
            <h2 class="track-title">{{ track.name }}</h2>
            <p class="track-meta">
              Artiest: 
              {% for artist in track.artists %}
                {{ artist.name }}{% unless forloop.last %}, {% endunless %}
              {% endfor %}
            </p>
            <p class="track-meta">Album: {{ track.album.name }}</p>
          </div>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>Er zijn nog geen nummers in je playlist.</p>
  {% endif %}
{% endblock %}
